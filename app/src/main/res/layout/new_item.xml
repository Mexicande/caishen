<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FCFCFC"
    app:cardElevation="0.1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/head"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/logo"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/head"
            android:id="@+id/tv_ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="手机贷"
            />
         <ImageView
             android:visibility="gone"
             android:id="@+id/iv_label"
             android:paddingTop="1dp"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_ProductName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/iv_new"/>
        <LinearLayout
            android:id="@+id/layout_apply"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_66"
                android:text="10000"/>
            <TextView
                android:textColor="@color/color_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人今日申请"
                android:textSize="10sp"/>
        </LinearLayout>
        <TextView
            android:layout_toLeftOf="@id/layout_apply"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/head"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_Summry"
            android:textSize="12sp"
            android:textColor="#616161"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_ProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/apply"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/apply_button"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请"/>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/apply"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/min_max_Special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_btn_bg_color"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_limt"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/min_max_Special"
                    android:textColor="@color/text_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="额度范围(元)"/>
            </RelativeLayout>
            <View
                android:background="#d1cfcf"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:paddingLeft="20dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/rate"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日利率"
                    android:textColor="@color/text_setting"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>