<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner_fresco_demo_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            style="@style/BannerDefaultStyle"
            app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_transitionEffect="defaultEffect"
            android:scaleType="centerCrop"
            app:banner_aspectRatio="2.5"
            android:adjustViewBounds="true"
            >
        </cn.bingoogolapple.bgabanner.BGABanner>
    <LinearLayout
        android:id="@+id/card"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/layout_big"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/icon_big"
                    />
                <ImageView
                    android:id="@+id/layout_smart"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/icon_smart"
                    />
                <ImageView
                    android:id="@+id/layout_card"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/icon_card"
                    />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/home"
            android:layout_marginTop="20dp"
            android:layout_below="@id/card"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hote_product"/>
            <com.allen.library.SuperButton
                android:id="@+id/apply"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:sCornersRadius="5dp"
                app:sShapeType="rectangle"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:sSolidColor="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="立即申请"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@id/home"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/base_white"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/color_66"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门贷款"/>
            <TextView
                android:id="@+id/more"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/gay"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多 >"/>

        </RelativeLayout>
</RelativeLayout>