<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/base_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner_fresco_demo_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            style="@style/BannerDefaultStyle"
            app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_transitionEffect="defaultEffect"
            android:scaleType="centerCrop"
            app:banner_aspectRatio="2.5"
            android:adjustViewBounds="true"
            >
        </cn.bingoogolapple.bgabanner.BGABanner>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zyp.cardview.YcCardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ycCardCornerRadius="5dp"
                app:ycCardElevation="3dp"
                app:ycCardMaxElevation="3dp"
                app:ycCardPreventCornerOverlap="true"
                app:ycStartShadowColor="@color/colorPrimary"
                >
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout_big"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_big"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大额贷款"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layout_smart"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_smart"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小额速贷"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layout_card"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_card"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证贷"/>
                    </LinearLayout>

                </LinearLayout>

            </com.zyp.cardview.YcCardView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hote_product"/>
            <com.allen.library.SuperButton
                android:id="@+id/apply"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:sCornersRadius="5dp"
                app:sShapeType="rectangle"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="30dp"
                app:sSolidColor="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="立即申请"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/color_66"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门贷款"/>
            <TextView
                android:id="@+id/more"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/gay"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多 >"/>

        </RelativeLayout>
</LinearLayout>